{
  "$id": "targets.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Targets",
  "description": "Migration targets used in the recommandation",
  "definitions": {
    "ModDimensions": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the mod dimension",
          "type": "string"
        },
        "values": {
          "description": "List of supported values",
          "type": "array"
        },
        "defaultValue": {
          "description": "Default value"
        }
      },
      "required": [
        "name",
        "values",
        "defaultValue"
      ]
    }
  },
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "description": "Identifier for the target",
        "type": "string"
      },
      "runtime": {
        "description": "Runtime for the target",
        "type": "string"
      },
      "dimensions": {
        "description": "Mod dimensions for the target",
        "type": "array",
        "items": {
          "$ref": "#/definitions/ModDimensions"
        }
      }
    },
    "required": [
      "id",
      "runtime"
    ]
  }
}